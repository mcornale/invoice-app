generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum InvoiceStatus {
  PAID
  PENDING
  DRAFT
}

type InvoiceAddress {
  street   String
  city     String
  postCode String
  country  String
}

type InvoiceItem {
  name     String
  quantity Int
  price    Float
  total    Float
}

model Invoice {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  displayId     String
  createdAt     DateTime?
  paymentDue    DateTime?
  description   String
  paymentTerms  Int
  clientName    String
  clientEmail   String
  status        InvoiceStatus
  total         Float
  senderAddress InvoiceAddress
  clientAddress InvoiceAddress
  items         InvoiceItem[]
  User          User?          @relation(fields: [userId], references: [id])
  userId        String?        @db.ObjectId
}

model User {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  username     String    @unique
  passwordHash String
  invoices     Invoice[]
}
