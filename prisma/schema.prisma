generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Status {
  PAID
  PENDING
  DRAFT
}

type Address {
  street   String
  city     String
  postCode String
  country  String
}

type Item {
  name     String
  quantity Int
  price    Float
  total    Float
}

model Invoice {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  displayId     String
  createdAt     DateTime
  paymentDue    DateTime
  description   String
  paymentTerms  Int
  clientName    String
  clientEmail   String
  status        Status
  total         Float
  senderAddress Address
  clientAddress Address
  items         Item[]
}
